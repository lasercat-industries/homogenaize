{
  "name": "homogenaize",
  "version": "0.1.0",
  "description": "A TypeScript-native library that provides a unified interface for multiple LLM providers (OpenAI, Anthropic, Gemini)",
  "author": "Ryland Goldstein",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "llm",
    "ai",
    "openai",
    "anthropic",
    "gemini",
    "typescript",
    "unified-api",
    "gpt",
    "claude",
    "structured-output",
    "zod"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rylandgoldstein/homogenaize.git"
  },
  "bugs": {
    "url": "https://github.com/rylandgoldstein/homogenaize/issues"
  },
  "homepage": "https://github.com/rylandgoldstein/homogenaize#readme",
  "scripts": {
    "prebuild": "bun run clean && bun run generate-model-types && bunx tsc -p tsconfig.build.json --noEmit",
    "build": "bun run scripts/build.ts",
    "postbuild": "bun run build:validate",
    "build:analyze": "bun run build && bunx source-map-explorer dist/*.js",
    "build:check": "bun run build && bunx publint && bunx attw --pack",
    "build:size": "bun run build && bunx size-limit",
    "build:validate": "bun -e 'import(\"./dist/index.js\").then(() => console.log(\"âœ… ESM import works\"))'",
    "clean": "bun run scripts/clean.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest --testTimeout=30000",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "list-models": "bun run scripts/list-models.ts",
    "list-chat-models": "bun run scripts/list-chat-models.ts",
    "generate-model-types": "bun run scripts/generate-model-types.ts",
    "prepublishOnly": "bun run build && bun run test && bun run typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/bun": "latest",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.0",
    "eslint": "^9.30.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.9.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "happy-dom": "^18.0.1",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "prettier": "^3.6.2",
    "uuid-mcp": "^1.0.0",
    "zod": "^4.0.0",
    "zod-to-json-schema": "^3.24.6"
  }
}
